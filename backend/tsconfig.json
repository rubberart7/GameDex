{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2022",                                  /* Set the JavaScript language version for emitted JavaScript and include compatible library declarations. */
    "lib": ["es2022"],                                   /* Specify a list of library files to be included in the compilation. */
    "experimentalDecorators": true,                      /* Enable experimental support for TC39 decorators. */
    "emitDecoratorMetadata": true,                       /* Emit design-type metadata for decorated declarations in source. */

    /* Modules */
    "module": "commonjs",                                /* Specify what module code is generated. */
    "rootDir": "./",                                     /* Specify the root directory of input files. */
    "moduleResolution": "node",                          /* Specify how the compiler resolves modules. */
    "outDir": "./dist",                                  /* Specify an output folder for all emitted files. */
    "esModuleInterop": true,                             /* Emit additional JavaScript to ease support for importing CommonJS modules. This enables a cleaner import syntax. */
    "forceConsistentCasingInFileNames": true,            /* Ensure that casing is correct in imports. */
    "resolveJsonModule": true,                           /* Enable importing .json files. */

    /* Type Checking */
    "strict": true,                                      /* Enable all strict type-checking options. */
    "noImplicitAny": true,                               /* Raise an error on expressions and declarations with an implied 'any' type. */
    "strictNullChecks": true,                            /* When type checking, take into account null and undefined values. */
    "noUnusedLocals": true,                              /* Enable error reporting for unused local variables. */
    "noUnusedParameters": true,                          /* Enable error reporting for unused parameters in functions. */

    /* Emit */
    "sourceMap": true,                                   /* Create source map files for emitted JavaScript files. */
    "declaration": true,                                 /* Generate declaration files (.d.ts) for emitted JavaScript files. */
    "declarationDir": "./dist/types",                    /* Specify the output directory for generated declaration files. */
    "skipLibCheck": true                                 /* Skip type checking all .d.ts files. */
  },
  "include": [
    "server.ts",
    "controllers/**/*.ts",
    "middleware/**/*.ts",
    "routes/**/*.ts",
    "libs/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}