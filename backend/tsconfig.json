{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022"],
    "module": "commonjs",
    "rootDir": "./",
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": false,
    // "noImplicitAny": true,
    "strictNullChecks": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "skipLibCheck": true
  },
  "include": [
    "server.ts",
    "controllers/**/*.ts",
    "middleware/**/*.ts",
    "routes/**/*.ts",
    "libs/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}