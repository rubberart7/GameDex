{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2022",
    "lib": ["es2022"],
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    
    /* Strictness */
    "strict": true,
    // "noImplicitAny": true,         // Uncomment if you want to enforce no 'any'
    "strictNullChecks": true,
    // "noUnusedLocals": true,        // Uncomment if you want errors for unused variables
    // "noUnusedParameters": true,    // Uncomment if you want errors for unused parameters

    /* Performance */
    "skipLibCheck": true,
    "incremental": true
  },
  "include": [
    "server.ts",
    "controllers/**/*.ts",
    "middleware/**/*.ts",
    "routes/**/*.ts",
    "libs/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
